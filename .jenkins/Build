pipeline {
  agent {
    docker { image 'cimg/android:2024.01.1' }
  }
  stages {
    stage('Check build-logic') {
      steps {
        sh './gradlew check -p build-logic'
      }
    }
    stage('Check spotless') {
      steps {
        sh './gradlew spotlessCheck --init-script gradle/init.gradle.kts --no-configuration-cache'
      }
    }
  }
}
